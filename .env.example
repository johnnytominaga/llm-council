# OpenRouter API Key (Required)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Turso Database (Required for Authentication)
# Create database: turso db create your-db-name
# Get URL: turso db show your-db-name --url
# Get token: turso db tokens create your-db-name
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Better Auth Secret (Required)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_random_secret_key_here

# App URL (Required for auth callbacks)
# Local: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AhaSend Email Service (Required for email verification)
# Get your API key from: https://ahasend.com
AHASEND_API_KEY=your_ahasend_api_key_here
EMAIL_FROM_DOMAIN=authmail.kilonovaventures.com
EMAIL_FROM_NAME=Kilonova LLM Council

# Optional: OAuth Providers
# Uncomment and add credentials if you want to use social login
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret


AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_UPLOAD_PREFIX=uploads/
AWS_S3_SIGNED_URL_EXPIRATION=3600